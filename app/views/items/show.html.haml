      = @item.name

    .item-main-content
      %ul.item-main-content__photo
        - @item.images.each_with_index do |image, i|
          %li.photo-up-piece
            = image_tag image.src.url, data: { index: i }
      
      %table.item-main-content__table
        %tbody
          %tr
            %th 出品者
            %td
              = link_to 'ニックネーム', '＃'
          %tr
            %th カテゴリー
            %td
              = @category.parent.parent.name
              -# = link_to 'メンズ', '#'
